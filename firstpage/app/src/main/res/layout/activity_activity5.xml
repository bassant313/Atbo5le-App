            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="  الاكلات :  "
            android:gravity="right"
            android:layout_marginTop="10dp"
            android:textColor="@color/items_color"
            android:textSize="30sp"
            />

        <Button
