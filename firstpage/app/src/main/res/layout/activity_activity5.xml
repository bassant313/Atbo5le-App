        />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="    سموحـه - الاسكندريه  "
            android:textSize="20sp"
            android:textColor="@color/items_color"
            android:gravity="left"
            />







    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
